<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina Principală</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-4">
        <nav class="d-flex justify-content-between">
            <h2 class="text-primary">Alegeri Prezidențiale</h2>

            <div>
                <% if (user) { %>
                    <a href="/profile" class="btn btn-success">Profil (<%= user.username %>)</a>
                    <a href="/logout" class="btn btn-danger">Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Login</a>
                    <a href="/register" class="btn btn-secondary">Signup</a>
                <% } %>
            </div>
        </nav>

        <hr>

        <h3 class="text-center text-primary">Top Candidați</h3>

        <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
            <div class="alert alert-danger text-center"><%= errorMessage %></div>
        <% } %>

        <ul class="list-group mt-3">
            <% if (typeof candidates !== "undefined" && candidates.length > 0) { %>
                <% candidates.forEach(candidate => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>
                            <a href="/profile/<%= candidate.id %>" class="text-decoration-none"><%= candidate.username %></a>
                        </strong> 
                        - <%= candidate.votes %> voturi
                        
                        <% if (user && user.id !== candidate.id && !userHasVoted) { %>
                            <form action="/vote" method="POST">
                                <input type="hidden" name="candidate_id" value="<%= candidate.id %>">
                                <button type="submit" class="btn btn-primary btn-sm">Votează</button>
                            </form>
                        <% } else if (user && user.id === candidate.id) { %>
                            <span class="badge bg-secondary">Nu poți vota pentru tine</span>
                        <% } else if (userHasVoted) { %>
                            <span class="badge bg-success">Ai votat</span>
                        <% } %>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="list-group-item">Nu există candidați înregistrați.</li>
            <% } %>
        </ul>                  
    </div>
</body>
</html>