<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-4">
        <nav class="d-flex justify-content-between">
            <h2 class="text-primary">Presidential Elections</h2>
            <div>
                <% if (loggedInUser) { %>
                    <a href="/profile" class="btn btn-success">Profil (<%= loggedInUser.username %>)</a>
                    <% if (loggedInUser.username === "admin") { %>
                        <a href="/admin" class="btn btn-dark">Admin Panel</a>
                    <% } %>
                    <a href="/user/logout" class="btn btn-danger">Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Login</a>
                    <a href="/register" class="btn btn-secondary">Signup</a>
                <% } %>
                <a href="/round/history" class="btn btn-warning">History</a>
            </div>
        </nav>
        <hr>
    </div>
    <div class="container mt-5">
        <div class="card shadow-lg p-4 mx-auto" style="max-width: 500px;">
            <h2 class="text-center text-primary">
                <% if (user && user.username) { %>
                    <% if (loggedInUser && loggedInUser.id === user.id) { %>
                        My Profile
                    <% } else { %>
                        Profile of <%= user.username %>
                    <% } %>
                <% } else { %>
                    <span class="text-danger">This profile does not exist or is private.</span>
                <% } %>
            </h2>                   

            <p class="text-center"><strong>User:</strong> <%= user.username %></p>

            <% if (loggedInUser && loggedInUser.id === user.id) { %>
                <form action="/user/update" method="POST">
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= user.description || '' %></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Save</button>
                </form>          
            <% } else { %>
                <p><strong>Description:</strong></p>
                <p class="border p-3 bg-light"><%= user.description || 'No description available' %></p>
            <% } %>

            <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
                <div class="alert alert-danger mt-3 text-center"><%= errorMessage %></div>
            <% } %>            
            <hr>
            <a href="/" class="btn btn-secondary w-100">Back</a>
        </div>
    </div>
</body>
</html>